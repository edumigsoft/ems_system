# Server Configuration
SERVER_PORT=8181
SERVER_HOST=localhost
SERVER_ADDRESS=localhost

BACKEND_PATH_API=/api/v1

ALLOWED_ORIGINS=http://localhost

JWT_KEY=change_this_to_a_secure_random_string

ENABLE_DOCS=true

# Database Configuration (PostgreSQL)
DB_HOST=postgres_ems_system
DB_PORT=5432
DB_NAME=ems_production
DB_USER=ems_user
DB_PASSWORD=change_me_ems_db_password

# Auth Configuration
ACCESS_TOKEN_EXPIRES_MINUTES=15
REFRESH_TOKEN_EXPIRES_DAYS=7
MAX_LOGIN_ATTEMPTS_PER_ACCOUNT=5
MAX_LOGIN_ATTEMPTS_PER_IP=10
ACCOUNT_LOCKOUT_MINUTES=30
IP_BLOCK_MINUTES=15
VERIFICATION_LINK_BASE_URL=http://localhost:8181/api/v1/auth/verify

# Email Service
EMAIL_SERVICE_HOST=smtp.example.com
EMAIL_SERVICE_PORT=587
EMAIL_SERVICE_API_KEY=your_api_key_here

# Storage Configuration
UPLOADS_PATH=/app/uploads
MAX_FILE_SIZE=50MB
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png
STORAGE_TYPE=local
