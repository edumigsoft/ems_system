# Template para container/.env
# Copie para .env, preencha os valores e NÃO versione o .env

# Server
SERVER_PORT=8181
# Dev: development | VPS: production
ENVIRONMENT=development

# Database (injetado via Platform.environment em runtime — obrigatório, sem fallback)
DB_HOST=postgres_ems_system
DB_PORT=5432
DB_NAME=db_ems
DB_USER=db_username
DB_PASS=db_password

# Upload
# Dev:  ../../.dev-data/uploads/ems
# VPS:  /root/ems_system/data/uploads/ems
UPLOADS_HOST_PATH=../../.dev-data/uploads/ems
UPLOADS_CONTAINER_PATH=/app/uploads
MAX_FILE_SIZE=50MB
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png
STORAGE_TYPE=local

# Logs
# Dev:  ../../.dev-data/logs/ems
# VPS:  /root/ems_system/data/logs/ems
LOGS_HOST_PATH=../../.dev-data/logs/ems
LOGS_CONTAINER_PATH=/app/logs

# Secrets de runtime (obrigatórios — ver lib/config/injector.dart e bin/server.dart)
JWT_KEY=change_to_secure_random_key
API_KEY=change_to_secure_random_key
# Dev: http://localhost:8181/api/v1/auth/verify
# VPS: https://api.ems.edumigsoft.com.br/api/v1/auth/verify
VERIFICATION_LINK_BASE_URL=http://localhost:8181/api/v1/auth/verify
